{{#each releases}}
    {{#if summary}}
        {{summary}}
    {{/if}}

    {{#if merges}}
        ### Merged

        {{#each merges}}
            - {{message}} {{#if href}}[`#{{id}}`]({{href}}){{/if}}
        {{/each}}
    {{/if}}

    {{#if fixes}}
        ### Fixed

        {{#each fixes}}
            - {{commit.subject}}{{#each fixes}} {{#if href}}[`#{{id}}`]({{href}}){{/if}}{{/each}}
        {{/each}}
    {{/if}}

    {{#commit-list commits heading='### Fixes' message='\b(fix|fixed|Fix|Fixed)\b'}}
        - {{subject}} [`{{shorthash}}`]({{href}})
    {{/commit-list}}

    {{#commit-list commits heading='### Commits' exclude='\b(fix|fixed|Fix|Fixed)\b'}}
        - {{subject}} [`{{shorthash}}`]({{href}})
    {{/commit-list}}

{{/each}}